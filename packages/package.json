{
  "scripts": {
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5"
  },
  "dependencies": {
    "xmlhttprequest": "1.8.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "setupFiles": [
      "<rootDir>/../scripts/test-setup.js"
    ],
    "moduleNameMapper": {
      "^.+\\.(s?css|png|svg)$": "<rootDir>/../scripts/dummy.js",
      "@coder/(.*)/testing": "<rootDir>/$1/testing",
      "@coder/(.*)": "<rootDir>/$1/src"
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/logger/"
    ],
    "testRegex": ".*\\.test\\.tsx?"
  }
}
